<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include android:layout_width="fill_parent"
             android:layout_height="60dp"
             layout="@layout/header" android:id="@+id/include"/>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp" android:background="@color/grey">
    </FrameLayout>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/listViewFirstLine"
            android:id="@+id/listViewHeaderText" android:gravity="center_horizontal" android:textSize="17dp"
            android:textColor="@color/white" android:typeface="normal" android:layout_marginTop="10dp"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView"/>
</LinearLayout>