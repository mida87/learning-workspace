<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <include android:layout_width="fill_parent"
             android:layout_height="60dp"
             layout="@layout/header" android:id="@+id/include"/>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp" android:background="@color/grey">
    </FrameLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connectBtn"
            android:id="@+id/connectButton" android:layout_gravity="center"
            android:textSize="@dimen/connectBtnTxtSize" android:padding="15dp" android:textStyle="bold"
            android:layout_marginTop="50dp"/>
</LinearLayout>

